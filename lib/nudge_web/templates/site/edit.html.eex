<%= form_for @changeset, Routes.site_path(@conn, :update, @site), fn f -> %>

  <div class="field">
    <%= label f, :active, "Active", class: "label" %>
    <div class="control">
      <%= checkbox f, :active, class: "input"%>
    </div>
    <p class="help is-danger"> <%= error_tag f, :active %></p>
  </div>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
