<h1> Sites List </h1>

<table>
  <thead>
    <tr>
      <th>Active</th>
      <th>Timezone</th>
      <th>Url</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= for site <- @sites do %>
      <tr>
        <td><%= link site.active, to: Routes.site_path(@conn, :edit, site) %></td>
        <td><%= site.tz %></td>
        <td><%= site.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>
